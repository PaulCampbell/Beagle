doctype 5
html
  head
    link(rel="icon", href="/favicon.png")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/zocial.css')
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
    script(src='/scripts/nav.js')
    link(rel="stylesheet", type="text/css", href="http://fonts.googleapis.com/css?family=Lobster")
  body(id='layout')
    div(id='upper')
      header
        div(class='max-home-width')
          - if (locals.isLoggedIn)
            div(class="pull-right") #{locals.user.username} - <a href="/logout", id="logout">Sign out</a>
              span(style="display:none;") #{locals.user._id}
          h1
           a(href="/", class="fancy") revu.se
      div(id='main-content', class='max-home-width')
        - if(!locals.isBlank(locals.flashInfo))
          div(id="flash", class="alert warning") #{locals.flashInfo}
        - if(!locals.isBlank(locals.flashError))
          div(id="flash", class="alert error") #{locals.flashError}
        block content

    footer
     div(class='max-home-width') &copy; Revu.se 2013

